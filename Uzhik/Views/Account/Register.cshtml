@model RegisterModel
@{
    ViewData["title"] = "Регистрация";
}

<body>
<div class="container autreg">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a asp-action="Login" asp-controller="Account" id="login-form-link">Авторизация</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" class="active" id="register-form-link">Регистрация</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="register-form" asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post" role="form" style="display: block;">
                                <div class="validation" asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <input type="text" asp-for="Name"  name="Name" id="username" tabindex="1" class="form-control" placeholder="Введите имя" value="">
                                    <span asp-validation-for="Name" />

                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Email" name="Email" id="email" tabindex="1" class="form-control" placeholder="Введите электронную почту" value="">
                                    <span asp-validation-for="Email" />
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" name="Password" id="password" tabindex="2" class="form-control" placeholder="Введите пароль">
                                    <span asp-validation-for="Password" />
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="confirm-password" tabindex="2" class="form-control" placeholder="Подтвердите пароль">
                                    <span asp-validation-for="ConfirmPassword" />
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-login" value="Зарегистрироваться">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="js/bootstrap.js"></script>

</body>	