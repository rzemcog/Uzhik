
@{
    ViewBag.Title = "Authorization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <header>
        <img src="~/Content/Images/logo.png" class="logo">
    </header>
    <section class="container">
        <div class="login">
            <div class="buttons">
                <button class="aut">Авторизация</button><button class="reg">Регистрация</button>
            </div>
            <form method="post" action="/Authorization/SignIn">
                <p><input type="text" name="Email" value="" placeholder="Email"></p>
                <p><input type="password" name="Password" value="" placeholder="Пароль"></p>
                <p class="aut-error">@ViewBag.Error</p>
                <p class="submit"><input type="submit" name="commit" value="Войти"></p>
            </form>
        </div>
    </section>

